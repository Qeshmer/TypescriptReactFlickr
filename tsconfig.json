{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.tsx"
    ],
    "typeRoots": [
       "../node_modules/@types",
       "../@types"
    ]
}
